// Place your key bindings in this file to override the defaults
[
    {
        "key": "j",
        "command": "vscode-neovim.compositeEscape1",
        "when": "neovim.mode == insert && editorTextFocus",
        "args": "j"
    },
    {
        "key": "ctrl+l",
        "command": "cursorRight",
        "when": "neovim.mode == insert && editorTextFocus"
    },
    {
        "key": "ctrl+h",
        "command": "cursorLeft",
        "when": "neovim.mode == insert && editorTextFocus"
    },
    {
        "key": "ctrl+j",
        "command": "cursorDown",
        "when": "neovim.mode == insert && editorTextFocus"
    },
    {
        "key": "ctrl+k",
        "command": "cursorUp",
        "when": "neovim.mode == insert && editorTextFocus"
    }
]